<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InstaClone.Maui.MainPage"
             Title="InstaClone MAUI Feed">

    <CollectionView ItemsSource="{Binding Posts}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="10" Padding="10" CornerRadius="5" BorderColor="LightGray">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="{Binding Username}" FontAttributes="Bold" />
                        <Image Source="{Binding ImageUrl}" Aspect="AspectFill" HeightRequest="300" />
                        <Label Text="{Binding Caption}" />
                        <Label Text="{Binding CreatedAt, StringFormat='{0:MMMM dd, yyyy}'}" TextColor="Gray" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
