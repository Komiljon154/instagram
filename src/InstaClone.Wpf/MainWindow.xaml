<Window x:Class="InstaClone.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InstaClone.Wpf"
        mc:Ignorable="d"
        Title="InstaClone WPF Feed" Height="600" Width="400">
    <Grid>
        <ListView ItemsSource="{Binding Posts}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock FontWeight="Bold" Text="{Binding Username}" />
                        <Image Source="{Binding ImageUrl}" Height="300" Margin="0,5,0,5"/>
                        <TextBlock Text="{Binding Caption}" TextWrapping="Wrap"/>
                        <TextBlock Foreground="Gray" Text="{Binding CreatedAt, StringFormat='{}{0:MMMM dd, yyyy}'}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>